{% sw_extends '@Administration/administration/index.html.twig' %}

{% block administration_favicons %}
    {{ parent() }}
    <style>
        :root {
            --frosh-nice-logo: url('{{ asset('static/img/cool_logo.svg', '@FroshNicerAdmin') }}');
            --frosh-nice-doge: url('{{ asset('static/img/doge.png', '@FroshNicerAdmin') }}');
        }

        @font-face {
            font-family: 'ComicMono';
            font-style: normal;
            font-weight: 100;
            font-display: swap;
            src: url('{{ asset('static/fonts/ComicMono.woff2', '@FroshNicerAdmin') }}') format("woff2"),
                 url('{{ asset('static/fonts/ComicMono.woff', '@FroshNicerAdmin') }}') format("woff");
        }
    </style>
    <script nonce="{{ cspNonce }}" type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            Shopware.Application.injectCss('{{ asset('administration/css/frosh-nicer-admin.css', '@FroshNicerAdmin') }}');
        }, false);
    </script>
{% endblock %}
